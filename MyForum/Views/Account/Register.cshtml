@model MyForum.ViewModels.RegisterViewModel
@{
	ViewData["Title"] = "Регистрация";
}
<link href="~/css/account.css" rel="stylesheet" />

<div class="account-form-block">
	<div class="account-form-block__inner">
		<h1 class="account-form-title">Регистрация</h1>
		<form asp-action="Register" asp-controller="Account" asp-antiforgery="true"
			  method="post">
			<div asp-validation-summary="ModelOnly" class="validation text-danger"></div>
			<div>
				<div name="validation-group" class="form-group">
					<label asp-for="Email" class="form-group-label">Email</label>
					<input asp-for="Email" class="form-group-input" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div name="validation-group" class="form-group">
					<label asp-for="Login" class="form-group-label">Логин</label>
					<input asp-for="Login" class="form-group-input" />
					<span asp-validation-for="Login" class="text-danger"></span>
				</div>
				<div name="validation-group" class="form-group">
					<label asp-for="Password" class="form-group-label">Пароль</label>
					<input asp-for="Password" class="form-group-input" />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div name="validation-group" class="form-group">
					<label asp-for="ConfirmPassword" class="form-group-label">Подтверждение пароля</label>
					<input asp-for="ConfirmPassword" class="form-group-input" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input class="btn btn-primary" type="submit" value="Зарегистрироваться" />
				</div>
			</div>
		</form>
	</div>
</div>


<script src="~/js/account-validate-change-color.js"></script>
